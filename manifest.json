{
  "name": "Plate Scraper",
  "manifest_version": 2,
  "version": "0.2",
  "description": "A very basic Chrome practice extension",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["jquery.min.js", "content.js"],
      "matches": [
        "*://www.allrecipes.com/*",
        "*://www.bettycrocker.com/*",
        "*://www.bonappetit.com/*",
        "*://www.chowhound.com/*",
        "*://www.cookinglight.com/*",
        "*://www.eatingwell.com/*",
        "*://www.epicurious.com/*",
        "https://food52.com/*",
        "*://www.foodandwine.com/*",
        "*://www.foodnetwork.com/*",
        "*://www.geniuskitchen.com/*",
        "*://www.jamieoliver.com/*",
        "*://www.myrecipes.com/*",
        "*://www.seriouseats.com/*",
        "*://www.simplyrecipes.com/*",
        "*://www.thekitchn.com/*"
        ]
    }
  ],
  "page_action": {
    "default_icon": "favicon.png",
    "default_title": "Plate Scraper"
  },
  "permissions": ["tabs", "activeTab"]
}
